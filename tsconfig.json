{
	"extends": "adonis-preset-ts/tsconfig.json",
	"include": [
		"**/*"
	],
	"exclude": [
		"node_modules",
		".yarn",
		"build"
	],
	"compilerOptions": {
		"outDir": "build",
		"rootDir": "./",
		"jsx": "react",
		"baseUrl": "./",
		"sourceMap": true,
		"paths": {
			"App/*": [
				"./app/*"
			],
			"Config/*": [
				"./config/*"
			],
			"Contracts/*": [
				"./contracts/*"
			],
			"Database/*": [
				"./database/*"
			]
		},
		"types": [
			"@adonisjs/core",
			"@adonisjs/repl",
			"@adonisjs/session",
			"@adonisjs/view",
			"@adonisjs/shield",
			"@japa/preset-adonis/build/adonis-typings",
			"@adonisjs/lucid",
			"@eidellev/inertia-adonisjs"
		]
	}
}
